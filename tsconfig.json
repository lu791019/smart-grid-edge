{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // 更改为 'node'
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".", // 使 TypeScript 正确识别 baseUrl 下的路径
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "experimentalDecorators": true, // 新增
    "emitDecoratorMetadata": true // 新增
  },
  "exclude": ["migrations/*", "src/generate/*", "tests/", "node_modules"]
}
